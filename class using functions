#include <iostream>
using namespace std;
class person{
    private:
    char name[20];
    int age;
    public:
    void getdata();
    void putdata();
};
void person::getdata()
{
    cout<<"enter the name:";
    cin>>name;
    cout<<"enter the age:";
    cin>>age;
}
void person::putdata()
{
    cout<<"name:"<<name<<"\n";
    cout<<"age:"<<age<<"\n";
}
int main()
{
    person p;
    p.getdata();
    p.putdata();
    
}
